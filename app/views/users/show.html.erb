    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
    <div class="row">
    <%= render 'users/list', user: current_user, book:@book, user:@user %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
    <tbody>
     <tr>
       <% @books.each do |book| %>
     <tr>
     <th> </th>

     <th>
       <%=link_to user_path(book.user) do %>
         <%= attachment_image_tag @user, :profile_image, size: "30x30", format: 'jpeg', fallback: "no_image.jpg" %>
       <% end %>
     </th>

     <th><%= link_to book.title, book_path(book.id) %></th>
     <th><%= book.body %></th>
     </tr>
    <% end %>
    </tbody>
      </table>
    </div>
  </div>
</div>


