<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
    
    <% if @user.errors.any? %>
    <div id="error_explanation">
     <h2><%= @user.errors.count %>error prohibited this book from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
    <div class="form-group">
       <label for="inputName">Name</label><br />
       <tr><%= f.text_field :name, size: 40 , id:"inputName" %></tr>
    </div>
    <div class="form-group">
       <label for="inputImage">Image</label><br />
        <%= f.attachment_field :profile_image %>
    </div>

    <div class="form-group">
      <label for="inputIntroduction">Introduction</label><br />
      <%= f.text_area :introduction, size: "40x5", id:"inputIntroduction" %>
    </div>
    <%= f.submit "Update User" %>
    <% end %>
    </div>
  </div>
</div>

