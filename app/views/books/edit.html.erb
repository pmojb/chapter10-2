<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>Editing Book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation">
     <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
    <div class="form-group">
       <label for="inputName">Title</label><br />
       <tr><%= f.text_field :title, size: 40 , id:"inputName" %></tr>
    </div>
    <div class="form-group">
      <label for="inputIntroduction">Opinion</label><br />
      <%= f.text_area :body, size: "40x5", id:"inputIntroduction" %>
    </div>
    <%= f.submit "Update Book" %>
    <% end %>
    <%=link_to"Show",book_path(@book) %>
    |
    <%=link_to"Back",books_path %>
    </div>
  </div>
</div>
