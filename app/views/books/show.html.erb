
      <p id="notice"></p>
   <div class="container px-5 px-sm-0">
      <div class="row">
         <%= render 'users/list', user: @book.user, book:@book_new %>
     		<div class="col-md-8 offset-md-1">
     		<h2>Book detail</h2>
     		<table class="table">
     		 <tr>
     		   <td>
     		    <div class="form-group">
     		      <%= link_to user_path(@book.user.id) do %>
               <%= attachment_image_tag @book.user, :profile_image, size: "30x30", format: 'jpeg', fallback: "no_image.jpg" %></br>
               <%= @book.user.name %>
               <% end %>
             </div>
            </td>

            <td>
               <%= @book.title %>
            </td>

            <td>
               <%= @book.body %>
            </td>
            <% if @book.user == current_user %>
            <td>
               <%= link_to "Edit",edit_book_path(@book), class:"btn btn-sm btn-success" %>
            </td>

            <td>
               <%= link_to "Destroy",book_path(@book), data: { confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger", method: :delete %>
            </td>
            <% end %>
          </tr>
         </table>
         </div>
      </div>
   </div>